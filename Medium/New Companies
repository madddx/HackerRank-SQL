SELECT Company.company_code, Company.founder, COUNT(DISTINCT Lead_Manager.lead_manager_code), COUNT(DISTINCT Senior_Manager.senior_manager_code), COUNT(DISTINCT Manager.manager_code), COUNT(DISTINCT Employee.employee_code) FROM Company JOIN Lead_Manager ON Company.company_code = Lead_Manager.company_code JOIN Senior_Manager ON Lead_Manager.lead_manager_code = Senior_Manager.lead_manager_code JOIN Manager ON Senior_Manager.senior_manager_code = Manager.senior_manager_code JOIN Employee ON Manager.manager_code = Employee.manager_code GROUP BY company_code, founder ORDER BY company_code ASC;
